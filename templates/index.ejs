<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content.title %></title>
    <link rel="stylesheet" href="/styles/main.css">
    <!-- React and ReactDOM via CDN -->
    <script src="https://unpkg.com/react/umd/react.production.min.js" crossorigin></script>
    <script src="https://unpkg.com/react-dom/umd/react-dom.production.min.js" crossorigin></script>
    <!-- Vue.js via CDN -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
</head>
<body>
    <!-- Include header partial -->
    <%- include('header') %>

    <main>
        <h1><%= content.title %></h1>
        <p><%= content.description %></p>
        <button id="dynamic-button"><%= content.buttonText %></button>

        <!-- React Container for react-app.js -->
        <div id="react-root"></div>

        <!-- Vue Container for vue-app.js -->
        <div id="vue-root">
            <p>{{ message }}</p>
        </div>

        <!-- jQuery Section for jquery-app.js -->
        <div id="jquery-section">
            <p id="jquery-text"></p>
        </div>
    </main>

    <!-- Include footer partial -->
    <%- include('footer') %>

    <!-- JavaScript files -->
    <script src="/scripts/main.js"></script>
    <script src="/scripts/react-app.js"></script>
    <script src="/scripts/vue-app.js"></script>
    <script src="/scripts/jquery-app.js"></script>
</body>
</html>